<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.AddAppointmentController">
    <children>
        <GridPane prefHeight="640.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="110.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>

                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>

                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>

                <Label fx:id="headerLBL" text="Add Appointment" GridPane.columnIndex="1" GridPane.columnSpan="3"
                       GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label fx:id="customerLBL" text="Customer" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="customerCB" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2"
                          GridPane.rowIndex="2"/>

                <Label fx:id="userLBL" text="User" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="userCB" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2"
                          GridPane.rowIndex="3"/>

                <Label fx:id="appointmentIDLBL" text="Appointment ID" GridPane.columnIndex="1"
                       GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <Label fx:id="appointmentDBLBL" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

                <Label fx:id="titleLBL" text="Title" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="titleTF" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5"/>

                <Label fx:id="descriptionLBL" text="Description" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="descriptionTF" GridPane.columnIndex="2" GridPane.columnSpan="2"
                           GridPane.rowIndex="6"/>

                <Label fx:id="locationLBL" text="Location" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="7">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="locationTF" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="7"/>

                <Label fx:id="contactLBL" text="Contact" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="8">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="contactCB" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2"
                          GridPane.rowIndex="8"/>

                <Label fx:id="typeLBL" text="Type" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="9">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="typeCB" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2"
                          GridPane.rowIndex="9"/>

                <Label fx:id="dateLBL" text="Date" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="10">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                </Label>
                <DatePicker fx:id="dateDP" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="10"/>

                <Label fx:id="startLBL" text="Start Time" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="11">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <GridPane GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="11">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Spinner fx:id="startHourSP"/>
                        <Label text=":" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
                        <Spinner fx:id="startMinuteSP" GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <Label fx:id="endLBL" text="End Time" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="12">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <GridPane GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="12">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Spinner fx:id="endHourSP"/>
                        <Label text=":" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
                        <Spinner fx:id="endMinuteSP" GridPane.columnIndex="2"/>
                    </children>
                </GridPane>

                <Button fx:id="addBTN" mnemonicParsing="false" onAction="#addBTNOA" prefWidth="70.0" text="Add"
                        GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="13"
                        GridPane.valignment="BOTTOM"/>
                <Button fx:id="cancelBTN" mnemonicParsing="false" onAction="#cancelBTNOA" prefWidth="70.0" text="Cancel"
                        GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="13"
                        GridPane.valignment="BOTTOM"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>